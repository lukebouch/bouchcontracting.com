---
import { Image } from "astro:assets";
import team from "../data/team.js";
---

<section class="mt-24">
    <div class="container-section py-20">
        <h2 class="h2 text-center">Meet the Team</h2>
        <p class="mt-3 text-lg text-gray-600 text-center max-w-prose mx-auto">
            We have an amazing team of friendly professionals are more than just
            contractors, they're craftsmen with a mission to bring joy and
            satisfaction to every homeowner they work with.
        </p>
        <div class="mt-16 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
            {
                team
                    .filter((person) => person.image)
                    .map(
                        (person) =>
                            person.image && (
                                <div class="relative rounded-xl overflow-clip shadow-lg">
                                    <Image
                                        src={person.image}
                                        alt={person.title}
                                        class="aspect-[3/4] object-cover object-top rounded-xl"
                                    />
                                    <div class="absolute h-60 z-10 left-0 right-0 bottom-0 flex flex-col-reverse opacity-95">
                                        <div class="h-24 bg-orange-500" />
                                        <div class="h-48 bg-gradient-to-t from-orange-500 to-transparent" />
                                    </div>
                                    <div class="absolute z-20 p-8 md:px-6 left-0 right-0 bottom-0 text-white">
                                        <p class="text-2xl font-bold">
                                            {person.name}
                                        </p>
                                        <p>
                                            Lorem ipsum dolor sit amet,
                                            consectetur adipiscing elit. Sed
                                            maximus eros a mauris euismod, ut
                                            mollis ante lobortis.
                                        </p>
                                    </div>
                                </div>
                            ),
                    )
            }
        </div>
    </div>
</section>
