---
import { Image } from "astro:assets";

const { name, title, image } = Astro.props;
---

<div class="relative rounded-xl overflow-clip shadow-lg">
    <Image
        src={image}
        alt={title}
        class="aspect-[3/4] object-cover object-top rounded-xl"
    />
    <div
        class="absolute h-60 z-10 left-0 right-0 bottom-0 flex flex-col-reverse opacity-95"
    >
        <div class="h-24 bg-orange-500"></div>
        <div class="h-48 bg-gradient-to-t from-orange-500 to-transparent"></div>
    </div>
    <div class="absolute z-20 p-8 md:px-6 left-0 right-0 bottom-0 text-white">
        <p class="text-2xl font-bold">
            {name}
        </p>
        <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed maximus
            eros a mauris euismod, ut mollis ante lobortis.
        </p>
    </div>
</div>
