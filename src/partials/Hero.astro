---
import { Image } from "astro:assets";

import backgroundHexigonsImage01 from "../assets/background-hexigons-01.svg";
import tomBouchImage01 from "../assets/images/people/tom-bouch-01.jpg";
import nathanHollifieldImage01 from "../assets/images/people/nathan-hollifield-01.jpg";
import carterMacdonaldImage01 from "../assets/images/people/carter-macdonald-01.jpg";
import mikeTempleImage01 from "../assets/images/people/mike-temple-01.jpg";
import wadeHooverImage01 from "../assets/images/people/wade-hoover-01.jpg";

const images = [
    {
        image: tomBouchImage01,
        alt: "Tom Bouch",
        class: "row-start-3 row-span-2",
    },
    {
        image: carterMacdonaldImage01,
        alt: "Carter MacDonald",
        class: "col-start-2 row-start-2 row-span-2",
    },
    {
        image: nathanHollifieldImage01,
        alt: "Nathan Hollifield",
        class: "col-start-2 row-start-4 row-span-2",
    },
    {
        image: mikeTempleImage01,
        alt: "Mike Temple",
        class: "col-start-3 row-start-1 row-span-2 lg:opacity-50",
    },
    {
        image: wadeHooverImage01,
        alt: "Wade Hoover",
        class: "col-start-3 row-start-3 row-span-2 lg:opacity-75",
    },
];
---

<section class="relative overflow-hidden">
    <div class="container-section">
        <div class="py-12 xl:flex xl:gap-20">
            <div class="flex-1 lg:py-24 xl:py-32 2xl:py-60">
                <h1
                    class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl leading-[1.6] sm:leading-[1.5] md:leading-[1.5] lg:leading-[1.3] font-semibold"
                >
                    Your Trusted Partner for<br />
                    Home Improvement and Remodeling
                </h1>
                <p class="mt-4 sm:mt-6 paragraph">
                    We are dedicated to turning your home improvement dreams
                    into reality. With a passionate team of skilled
                    professionals, we take pride in delivering top-notch
                    remodeling and renovation services that enhance the beauty,
                    functionality, and value of your home.
                </p>
                <div class="mt-6">
                    <a href="TODO" class="btn-primary">Get a Quote</a>
                    <a href="tel:4349222500" class="btn-secondary">Call Now</a>
                </div>
            </div>
            <div
                class="relative -mx-[100px] lg:mx-0 xl:-mr-[200px] xl:mt-0 flex-1 grid grid-cols-3 grid-rows-5 xl:grid-rows-6 gap-8"
            >
                {
                    images.map((image) => (
                        <Image
                            src={image.image}
                            alt={image.alt}
                            class:list={["rounded-lg shadow-md", image.class]}
                            widths={[
                                190,
                                230,
                                270,
                                320,
                                480,
                                640,
                                image.image.width,
                            ]}
                            sizes="(min-width: 1280px) 15vw, 30vw"
                        />
                    ))
                }
            </div>
        </div>
    </div>
    <Image
        src={backgroundHexigonsImage01}
        alt=""
        class="absolute inset-0 -z-10 opacity-[2%] -left-[500px] -top-[300px]"
    />
</section>
